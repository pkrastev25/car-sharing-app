<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petar.car.sharing.ui.fragments.PlaceMarkMapFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/view_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/show_list_button"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/show_list_button"
            style="@style/Text.L.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:gravity="center"
            android:text="@string/button_show_list"
            android:textColor="@color/primary_dark_contrast"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/view_loading"/>

    <include layout="@layout/view_error"/>

</android.support.constraint.ConstraintLayout>
